%h1.ui.center.aligned.header= "Agreements for '#{@race.name}'"
.ui.stackable.four.column.centered.grid
  .row
    .three.column
      %p 
        %strong Check
        all of the agreements to agree to their terms and conditions.
  .row
    .three.column
      .ui.checkbox
        %input.agreements{:type => "checkbox", :name=> "privacy"}
        %label 
          = "Privacy agreement"
          = link_to('(full terms)', '/docs/privacy-policy.pdf', {:target => '_blank'})
  .row
    .three.column
      .ui.checkbox
        %input.agreements{:type => "checkbox", :name=> "terms"}
        %label
          = "Terms of use agreement"
          = link_to('(full terms)', '/docs/terms-of-use.pdf', {:target => '_blank'})
  .row
    .three.column
      .ui.checkbox
        %input.agreements{:type => "checkbox", :name=> "release"}
        %label
          = "Accident waiver & release of liability agreement"
          = link_to('(full terms)', '/docs/release-liability.pdf', {:target => '_blank'})
  - if current_user.is_subscribed == false
    .row
      .ui.warning.message
        .header
          You must be a Strava premium subscriber to register for the race
        %a{:href=>'https://www.strava.com/subscribe', class: 'link-to-anchor'} Subscribe
        , then try again
  - else
    .row
      .two.column.center.aligned
        %button.new-registration-checkout.ui.disabled.primary.button{:"data-post-url" => checkout_session_race_registration_index_path(@race.id)} Pay Registration
