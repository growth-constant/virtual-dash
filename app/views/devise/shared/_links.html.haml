- if controller_name != 'sessions'
  .ui.blue.button= link_to "Log in", new_session_path(resource_name)
  %br

- if devise_mapping.omniauthable?
  - resource_class.omniauth_providers.each do |provider|
    .auth-user-container
      .ui.middle.aligned.grid
        .row
          .eight.wide.column
            .auth-card
              %h1 Welcome
              %p  
                By logging in you accept our 
                %a{ href: "http://" } Privacy Policy 
                and 
                %a{ href: "http://" } Terms of Service.
              .ui.register_strava_button_link.button= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: 'register_strava_button_link'
          .eight.wide.column
            = image_tag '/', alt: '', class: ''