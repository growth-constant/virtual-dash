- if total == 1
  %div
- else
  .ui.compact.menu{style: 'position: absolute; bottom: 3em;'}
    - if total <= 6
      - for i in 0...total
        %a.item= i + 1
    - else
      - if page > (total - 4)
        - for i in (total - 3)...total
          %a.item= i - 2
      - else
        %a.item= page - 1
        - for i in page...(page + 2)
          %a.item= i + 1
      %a.item.disabled= "..."
      - for i in (total - 3)...total
        %a.item= i + 1