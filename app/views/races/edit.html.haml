.ui.stackable.three.column.centered.grid
  .row
    .two.column
      .title-container 
        %h1 Editing race
        .links
          = link_to 'Back', @race, class: 'link-to-anchor'
      = simple_form_for @race do |f|
        = f.input :title
        = f.input :description
        = f.input :country
        = f.input :state
        = f.input :city
        = f.input :enddate
        = f.input :segment_id
        = f.button :submit

