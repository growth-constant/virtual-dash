.new-race-container
  .ui.stackable.grid
    .two.column.row
      .column 
        .title-container
          %h1 New race
      .column
        .title-container
          = link_to 'Back', races_path, class: 'ui right floated button'
    .one.column.row
      .column
        = simple_form_for @race do |f|
          .ui.stackable.grid
            .two.column.row
              .column
                = f.input :title, class: 'ui input'
                = f.input :description, class: 'ui input'
                %br
                = f.input :country, class: 'ui input'
              .column
                = f.input :state, class: 'ui input'
                = f.input :city, class: 'ui input'
                = f.input :segment_id, class: 'ui input'
                = f.input :startdate, as: :date, html5: true, label: 'Starts'
                = f.input :enddate, as: :date, html5: true, label: 'Ends'
          %br
          = f.button :submit, class: 'ui button dark-blue'
          .ui.icon.message
            %i.calendar.icon.black
            .content 
              .header
                Remember!
              %p Only the tries between the start and the end date will be taken from Strava. If you have previous attemps on this segment, they will not appear.