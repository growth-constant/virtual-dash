!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Virtual Dash
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag "https://maps.google.com/maps/api/js?key=#{ENV['GMAPS_KEY']}&libraries=geometry"
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'maps/race'
    = tag :meta, :name => "stripe-key", :content => Rails.configuration.stripe[:publishable_key]

  - if current_user
    %body
      = render partial: "layouts/header"
      .ui.main.container
        %p#notice= notice
        %p#alert= alert
        = yield
  - else
    %body{:style => "margin: 0; background: rgba(255, 255, 255, 1)"}
      %input#anPageName{:name => "page", :type => "hidden", :value => "find-races"}/
      .container-center-horizontal
        .find-races.screen
          = render partial: "layouts/header_races"
          = yield
